        <%- include('partials/header') %>
        <link rel="stylesheet" href="/css/alunos.css">
        <link rel=”canonical” href="https://highperformancedh.azurewebsites.net"/>
    </head>
<body>

    <%- include('partials/navBar') %>
    <%- include('partials/bikeGif') %>
 
    <!-- Alunos -->
    <div class="container">
        <div class="col s12 m12 quadrado" style="margin-bottom: 0;">
            <div id="alunos"><h2>Alunos</h2></div>                                    
        </div>
        
        <!-- INICIO DA LISTA -->        
            <div class="row"  id="lista"> 
                <div class="col s12 m6" style="padding: 0;">
                    <a id="addAluno" href="/home/cadastrarAlunos" class="waves-effect waves-light btn" style="margin-top:20px;background-color:#ff7e00;font-weight: bold;"><i class="material-icons" style="position: relative;              top: 4px;margin-right: 10px;line-height: normal;">person_add</i>ADICIONAR ALUNO</a>
                </div>
                <div class="col s12 m6">
                    <div class="nav-wrapper">                        
                        <form id="formSearch" action="/busca" method="get">
                            <div class="input-field">
                                <input id="search" type="text" name="q" placeholder="Pesquisar Alunos" autocomplete="off">
                            </div>                            
                        </form>
                    </div>
                </div>
            </div>
        

        <br/>
        <!-- Lista dos alunos -->
        
        <div class="col s12 m12 l12">
            <table class="highlight centered table" id="tabledata">
                <thead>
                    <tr>
                        <th>Imagem</th>
                        <th>Nome</th>
                        <th>Telefone</th>
                        <th>Meta</th>
                    </tr>
                </thead>
                
                <tbody>
                    <% for (aluno of alunos) { %>
                    <tr data-url="/home/treino/<%= aluno.id %>">
                        <td><img id="foto-aluno" src="<%= aluno.img %>" alt="Foto <%= aluno.nome %>" style="width:80px;height:80px;border-radius:50%;"></td>
                        <td><%= aluno.nome %></td>
                        <td><%= aluno.telefone %></td>
                        <td><%= aluno.meta%> km</td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>


        <div class="row">
            <div class="col l12 m12 s12 center-align">
                <ul id="dropdown2" class="dropdown-content">
                    <li>
                        <a onclick="dowloadDoc()" id="pdf" class="black-text">PDF</a>
                    </li>
                    <li>
                        <a href="#!" id="csv" class="black-text">Excel</a>
                    </li>
                </ul>
                <a class="btn dropdown-trigger" href="#!" data-target="dropdown2" id="btnExport">Exportar para<i class="material-icons right" >arrow_drop_down</i></a>
            </div>
        </div>       
        
    </div>

    
    <%- include('partials/footer') %>
    <script src="/js/linktr.js"></script>
    <%- include('partials/rodape') %>

   